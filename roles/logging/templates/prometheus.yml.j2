{{ ansible_managed | comment }}

global:
  scrape_interval: {{ logging_metrics_scrape_interval }}
  evaluation_interval: {{ logging_metrics_scrape_interval }}

scrape_configs:
  - job_name: node
    metrics_path: /api/v0/component/prometheus.exporter.unix.host/metrics
    static_configs:
      - targets:
          - alloy:12345

  - job_name: podman
    static_configs:
      - targets:
          - podman-exporter:9882
